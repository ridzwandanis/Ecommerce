// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("customer") // "customer" or "admin"
  createdAt DateTime @default(now())
  orders    Order[]
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  price       Decimal
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
  image       String
  description String?
  stock       Int       @default(10)
  weight      Int       @default(1000) // in grams
  type        String    @default("physical") // "physical" or "digital"
  fileUrl     String?   // For digital products, link to download
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id              Int         @id @default(autoincrement())
  email           String
  firstName       String
  lastName        String
  address         String
  city            String
  postalCode      String
  total           Decimal
  subtotal        Decimal?    // Subtotal before shipping
  shippingCost    Decimal?    // Shipping cost
  shippingCourier String?     // Courier name (jne, tiki, pos)
  shippingService String?     // Service type (REG, YES, etc)
  status          String      @default("pending") // pending, paid, shipped, cancelled
  createdAt       DateTime    @default(now())
  items           OrderItem[]
  
  userId          Int?
  user            User?       @relation(fields: [userId], references: [id])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}

model StoreSetting {
  id              Int      @id @default(1)
  storeName       String   @default("Microsite Shop")
  storeDescription String?
  
  // Branding
  logoUrl         String?
  bannerUrl       String?
  
  // Social Links & Contact
  whatsapp        String?
  instagram       String?
  facebook        String?
  twitter         String?
  tiktok          String?
  supportEmail    String?
  
  // Shipping Origin
  storeAddress    String?
  storeProvinceId String?
  storeCityId     String?
  storeDistrictId String?
  
  updatedAt       DateTime @updatedAt
}

// --- Location Cache Models ---

model Province {
  id        String   @id
  name      String
  cities    City[]
}

model City {
  id          String     @id
  provinceId  String
  province    Province   @relation(fields: [provinceId], references: [id])
  name        String
  type        String     // "Kota" or "Kabupaten"
  postalCode  String?
  districts   District[]
  
  @@index([provinceId])
}

model District {
  id        String   @id
  cityId    String
  city      City     @relation(fields: [cityId], references: [id])
  name      String
  
  @@index([cityId])
}